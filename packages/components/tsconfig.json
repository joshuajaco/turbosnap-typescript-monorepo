{
  "compilerOptions": {
    "incremental": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": ["dist"]
}
